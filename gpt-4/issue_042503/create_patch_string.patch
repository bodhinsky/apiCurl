    """Fetch and save user's Discogs collection."""
    base_url = 'https://api.discogs.com/users/'
    headers = {'Authorization': 'Discogs token=' + user_token}
    response = requests.get(f'{base_url}/{user_id}/collection/folders/0/releases', headers=headers)
    with open(file_path, 'w') as f:
        f.write(response.text)

